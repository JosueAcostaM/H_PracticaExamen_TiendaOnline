{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Api_Tienda.Postgres": "server=localhost;username=postgres;database=Api_TiendaOnline;Password=123",
    "Api_Tienda.mariadb": "Server=127.0.0.1;Database=Api_TiendaOnline;Uid=root;Pwd=123;",
    "Api_Tienda.sqlserver": "Server=.;Database=Api_TiendaOnline;User Id=sa;Password=sa.123;TrustServerCertificate=true"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/tienda_api_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Information",
          "fileSizeLimitBytes": 100485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/tienda_api_warnings_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Warning",
          "fileSizeLimitBytes": 100485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/tienda_api_error_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj}. {Exception}{NewLine}",
          "restrictedToMinimumLevel": "Error",
          "fileSizeLimitBytes": 100485760,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "buffered": false
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  }


}
